{% extends 'basee.html.twig' %}

{% block body %}
<br>
    <div class="dashboard-list">
        <h3 class="heading">Send notifications </h3>
        <div class="dashboard-message contact-2 bdr clearfix">
            <div class="row">

                <div class="col-lg-3 col-md-3">
                    <!-- Edit profile photo -->
                    {{ form_start(form) }}

                </div>
                <div class="col-lg-9 col-md-9">


                    <div class="row">


                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="form-group mb-0 message">
                                {{  form_label(form.choices, "choices") }}
                                {{  form_widget(form.choices ,{'attr': {'class': 'form-control'}}) }}

                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="form-group mb-0 message">
                                {{  form_label(form.username, "username") }}

                                {{  form_widget(form.username ,{'attr': {'class': 'form-control'}}) }}

                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group mb-0 message">
                                {{  form_label(form.contenu, "message") }}
                                {{  form_widget(form.contenu ,{'attr': {'class': 'form-control'}}) }}

                            </div>
                        </div>



                        <div class="col-lg-6 col-md-12 col-sm-6">
                            <div class="form-group name">
                                <br>
                                {{  form_widget(form.send ,{'attr': {'class': 'btn btn-md button-theme'}}) }}

                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group name">
                                {{ form_end(form) }}

                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>

    </div>
{% endblock%}


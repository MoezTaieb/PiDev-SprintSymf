{% extends 'basee.html.twig' %}


{% block body %}

    <div class="dashboard-list">
        <h3 class="heading">Add Ad</h3>
        <div class="dashboard-message contact-2 bdr clearfix">
            <div class="row">

                <div class="col-lg-3 col-md-3">
                    <!-- Edit profile photo -->
                              {{ form_start(form) }}

                </div>
                <div class="col-lg-9 col-md-9">


                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group name">
                                {{ form_label(form.titreAnnonce, "Ad Title") }}
                                {{  form_widget(form.titreAnnonce ,{'attr': {'class': 'form-control'}}) }}
                                <div class="my-custom-class-for-errors">
                                    {{ form_errors(form.titreAnnonce) }}

                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group mb-0 message">
                                {{  form_label(form.descriptionAnnonce, "Ad Description") }}
                                {{  form_widget(form.descriptionAnnonce ,{'attr': {'class': 'form-control'}}) }}
                                <div class="my-custom-class-for-errors">
                                    {{ form_errors(form.descriptionAnnonce) }}

                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6">
                            <div class="form-group name">

                            </div>
                        </div>

                        {{  form_row(form.brochure ) }}

                        <button type="submit" class="btn btn-md button-theme">publish ad</button>
                    </div>


                    {{ form_end(form) }}



                </div>
            </div>
        </div>

    </div>
{% endblock%}


{% extends 'baseback.html.twig' %}

{% block body %}

    {% for can in equipment %}


        <fieldset class="col-md-6">

            <table class="table">



                <tr><td>nom</td><td>{{ can.nomEquipment }}</td></tr>
                <tr><td>Date </td> <td>{{ can.dateDonEquipment|date('Y-m-d') }}</td></tr>
                <tr><td>Etat</td> <td style="color: #ffaa00">{{ can.etatEquipment }}</td></tr>
                <tr><td><a class="fa fa-check" style="color: green" href="{{ path('accepter', {'id':can.id}) }}">recu</a></td> <td><a class="fa fa-exclamation" style="color: red" href="{{ path('refuser', {'id': can.id}) }}">no recu</a></td></tr>
            </table>

        </fieldset>
    {% endfor %}
    <style>
        fieldset
        {
            border: 1px solid #ddd !important;
            margin: 0;
            xmin-width: 0;
            padding: 10px;
            position: relative;
            border-radius:4px;
            background-color:#f5f5f5;
            padding-left:10px!important;
        }

        legend
        {
            font-size:14px;
            font-weight:bold;
            margin-bottom: 0px;
            width: 12%;
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px 5px 5px 10px;
            background-color: #ffffff;
        }
    </style>
{% endblock %}
